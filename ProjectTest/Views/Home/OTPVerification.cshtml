
@{
    ViewBag.Title = "OTPVerification";
    Layout = "~/Views/Shared/_NotApproved.cshtml";
}
@if (ViewBag.Error == 1)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.MSG
    </div>
}
<h4>OTP Verification</h4>
<br />
<form action="" method="post">
    <div class="mb-3">
        <label class="form-label">Enter OTP</label>
        <input type="text" value="" name="otp" class="form-control" id="" />
        <input type="hidden" value="@Session["email"].ToString()" name="email" />
    </div>
    <div class="mb-3">
        <input type="submit" value="Send Request" class="btn btn-primary btn-block" />

    </div>
</form>

