@model List<ProjectTest.Models.UserRestaurant>
@{
    ViewBag.Title = "JoinRequests";
    Layout = "~/Views/Shared/_AfterLoginAdmin.cshtml";
}

<h4>Restaurants</h4>
<table class="table table-bordered table-sm">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Location</th>
        <th>Approval Status</th>
        <th></th>
    </tr>
    @foreach(var restaurants in Model)
            {
                <tr class="table-primary">
                    <td>@restaurants.Name</td>
                    <td>@restaurants.Email</td>
                    <td>@restaurants.Location</td>
                    <td><span class="badge border border-danger text-danger">@restaurants.Is_Approved</span></td>
                    <td><a href="#" class="btn btn-success btn-sm" ><i data-feather="check"></i></a></td>
                </tr>
            }
</table> <br />

         <h4>Employees</h4>
         <table class="table table-bordered table-sm">
             <tr>
                 <th>Name</th>
                 <th>Email</th>
                 <th>Date of Birth</th>
                 <th>Gender</th>
                 <th>Approval Status</th>
                 <th></th>
             </tr>
             @foreach (var emps in ViewBag.unapproved)
             {
                 <tr class="table-primary">
                     <td>@emps.Name</td>
                     <td>@emps.Email</td>
                     <td>@emps.DOB</td>
                     <td>@emps.Gender</td>
                     <td><span class="badge border border-danger text-danger">@emps.Is_Approved</span></td>
                     <td><a href="#" class="btn btn-success btn-sm"><i data-feather="check"></i></a></td>
                 </tr>
             }
         </table>

