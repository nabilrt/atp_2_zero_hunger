@model ProjectTest.Models.UserRestaurant
@{
    ViewBag.Title = "changeDP";
    Layout = "~/Views/Shared/_AfterLoginRestaurant.cshtml";
}


@if (ViewBag.Error == 1)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}
<h4>Change Profile Picture</h4>
<br />
<form action="" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.Picture" alt="Alternate Text" height="150" width="150" />
        </div>
    </div>
    <div class="row">
        <input type="file" value="" id="" name="Picture" class="form-control" /> <br />
        <input type="hidden" value="@Model.Id" name="Id" />
    </div> <br />
    <div class="row">
        <div class="col-md-12">
            <input type="submit" value="Update" class="btn btn-outline-info" />
        </div>
    </div>
</form>

